@page "/establishment/delete/{estID}"
@inherits DeleteEstablishmentModel

<h3>@Title</h3>
<hr />

<EditForm Model="@est" OnValidSubmit="DeleteEstablishment">
    <DataAnnotationsValidator />
    <div class="form-group row">
        <label class="control-label col-md-12">ID</label>
        <div class="col-md-4">
            <input class="form-control" @bind="est.est_id" disabled />
        </div>
        <ValidationMessage For="@(()=>est.est_id)" />
    </div>

    <div class="form-group row">
        <label class="control-label col-md-12">Name</label>
        <div class="col-md-4">
            <input class="form-control" @bind="est.est_Name" disabled />
        </div>
        <ValidationMessage For="@(()=>est.est_Name)" />
    </div>

    <div class="form-group row">
        <label class="control-label col-md-12">Type</label>
        <div class="col-md-4">
            <input class="form-control" @bind="est.est_Type" disabled />
        </div>
        <ValidationMessage For="@(()=>est.est_Type)" />
    </div>

    <div class="form-group row">
        <label class="control-label col-md-12">Address</label>
        <div class="col-md-4">
            <input class="form-control" @bind="est.est_address" disabled />
        </div>
        <ValidationMessage For="@(()=>est.est_address)" />
    </div>

    <div class="form-group row">
        <label class="control-label col-md-12">Phone No.</label>
        <div class="col-md-4">
            <input class="form-control" @bind="est.est_phoneNum" disabled />
        </div>
        <ValidationMessage For="@(()=>est.est_phoneNum)" />
    </div>

    <div class="form-group row">
        <label class="control-label col-md-12">Email</label>
        <div class="col-md-4">
            <input class="form-control" @bind="est.est_email" disabled />
        </div>
        <ValidationMessage For="@(()=>est.est_email)" />
    </div>

    <div class="form-group row">
        <label class="control-label col-md-12">Status</label>
        <div class="col-md-4">
            <input class="form-control" @bind="est.est_status" disabled />
        </div>
        <ValidationMessage For="@(()=>est.est_status)" />
    </div>

    <div class="form-group row">
        <label class="control-label col-md-12">No. of Reservations</label>
        <div class="col-md-4">
            <input class="form-control" @bind="est.est_numOfReservation" disabled />
        </div>
        <ValidationMessage For="@(()=>est.est_numOfReservation)" />
    </div>

    <div class="form-group row">
        <label class="control-label col-md-12">Password</label>
        <div class="col-md-4">
            <input class="form-control" @bind="est.est_password" disabled />
        </div>
        <ValidationMessage For="@(()=>est.est_password)" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Delete</button>
        <button class="btn btn-light" @onclick="Cancel">Cancel</button>
    </div>
</EditForm>
