@page "/establishment/add"
@page "/establishment/edit/{estID}"
@inherits AddEditEstablishmentModel

<h3>@Title</h3>
<hr />

<EditForm Model="@est" OnValidSubmit="SaveEstablishment">
    <DataAnnotationsValidator />
    <div class="form-group row">
        <label class="control-label col-md-12">ID</label>
        <div class="col-md-4">
            <input class="form-control" @bind="est.est_id" />
        </div>
        <ValidationMessage For="@(()=>est.est_id)" />
    </div>

    <div class="form-group row">
        <label class="control-label col-md-12">Name</label>
        <div class="col-md-4">
            <input class="form-control" @bind="est.est_Name" />
        </div>
        <ValidationMessage For="@(()=>est.est_Name)" />
    </div>

    <div class="form-group row">
        <label class="control-label col-md-12">Type</label>
        <div class="col-md-4">
            <select class="form-control" @bind="est.est_Type">
                <option>-- Select Type --</option>
                <option>Resort</option>
                <option>Restaurant/Cafe</option>
                <option>Dental/Eye Clinic</option>
                <option>Internet Cafe/Coworking Space</option>
                <option>Spa/Salon</option>
            </select>
        </div>
        <ValidationMessage For="@(()=>est.est_Type)" />
    </div>

    <div class="form-group row">
        <label class="control-label col-md-12">Address</label>
        <div class="col-md-4">
            <input class="form-control" @bind="est.est_address" />
        </div>
        <ValidationMessage For="@(()=>est.est_address)" />
    </div>

    <div class="form-group row">
        <label class="control-label col-md-12">Phone No.</label>
        <div class="col-md-4">
            <input class="form-control" @bind="est.est_phoneNum" />
        </div>
        <ValidationMessage For="@(()=>est.est_phoneNum)" />
    </div>

    <div class="form-group row">
        <label class="control-label col-md-12">Email</label>
        <div class="col-md-4">
            <input class="form-control" @bind="est.est_email" />
        </div>
        <ValidationMessage For="@(()=>est.est_email)" />
    </div>

    <div class="form-group row">
        <label class="control-label col-md-12">Status</label>
        <div class="col-md-4">
            <select class="form-control" @bind="est.est_status">
                <option>-- Select Status --</option>
                <option>Classic</option>
                <option>Free</option>
                <option>Premium</option>
            </select>
        </div>
        <ValidationMessage For="@(()=>est.est_status)" />
    </div>

    <div class="form-group row">
        <label class="control-label col-md-12">No. of Reservations</label>
        <div class="col-md-4">
            <input class="form-control" @bind="est.est_numOfReservation" />
        </div>
        <ValidationMessage For="@(()=>est.est_numOfReservation)" />
    </div>

    <div class="form-group row">
        <label class="control-label col-md-12">Password</label>
        <div class="col-md-4">
            <input class="form-control" @bind="est.est_password" />
        </div>
        <ValidationMessage For="@(()=>est.est_password)" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <button class="btn btn-light" @onclick="Cancel">Cancel</button>
    </div>
</EditForm>
